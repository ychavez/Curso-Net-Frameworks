@model EscuelaMVC.Models.AlumnoCurso

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>AlumnoCurso</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Alumno.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.Alumno.Id, new SelectList(ViewBag.DsAlumnos, "Id", "Nombre",Model.Alumno.Id.ToString()), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Alumno.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Curso.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.Curso.IDCurso, new SelectList(ViewBag.DsCursos, "IDCurso", "Nombre",Model.Curso.IDCurso.ToString()), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Curso.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
